<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shelter">
	<insert id="insert" parameterType="shelterDto">
		INSERT INTO shelter
		(serialNum,id,name,phoneNumber,email,address,regdate)
		VALUES(#{serialNum},#{id},#{name},#{phoneNumber},#{email},#{address},SYSDATE)
	</insert>
	<update id="updateInfo" parameterType="shelterDto">
		UPDATE shelter
		SET phoneNumber=#{phoneNumber},email=#{email},address=#{address}
		WHERE id=#{id}
	</update>
	<select id="getData" parameterType="string" resultType="shelterDto">
		SELECT id,name,serialNum,email,phoneNumber,address,TO_CHAR(regdate,'YYYY-MM-DD')AS regdate,groupNum
		FROM shelter
		WHERE id=#{id}
	</select>
	<delete id="deleteShelter" parameterType="string">
		DELETE shelter
		WHERE id=#{id}
	</delete>
</mapper>